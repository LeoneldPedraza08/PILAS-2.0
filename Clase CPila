package Enunciado01;

import java.util.Scanner;

public class CPila {
    
   Scanner teclado = new Scanner(System.in);
    
   int tope, max;
   CAlumno [] pila; //Declarando arreglo Pila de tipo CAlumno
   CAlumno alu = new CAlumno(); //Creando un objeto de CAlumno
   
   
   
   public CPila(int MAX){
        this.tope = 0;
        this.max = MAX;
        this.pila = new CAlumno [this.max + 1];
    }
   
   public CPila(){
        this.tope = 0;
        this.max = 100;
        this.pila = new CAlumno [this.max + 1];
    }
   
    public int getTope(){
        return tope;
    }
   
   public boolean siestaLlena(){
        if(this.max == this.tope){
            return true;
        }else{
            return false;
        }
    }
    
    public boolean siestaVacia(){
        if (this.tope == 0){
            return true;
        }else{
            return false;
        }
    }
    
    public void insertaPilar(int pos, int codigo, String nombre, int n1, int n2){
        if(this.siestaLlena()){
            System.out.println("La pila esta Llena ");
        }else{
        System.out.println("Ingrese codigo");
        String codigo = teclado.next();
        alu.setCodigo(codigo)
         System.out.println("Ingrese nombre");
        String nombre = teclado.next();
        alu.setCodigo(nombre)
        System.out.println("Ingrese nota 1");
        int n1 = teclado.next();
        alu.setCodigo(n1)
        System.out.println("Ingrese nota 2");
        int n2 = teclado.next();
        alu.setCodigo(n2)
        this.tope++;
        }
    }
    
    public void eliminarPila(){
        if(this.siestaVacia()){
            System.out.println("La pila esta vacia ");
        }else{
            this.tope--;
        }
    }
    
        public void mostrarPila(){
        if(this.siestaVacia()){
            System.out.println("No hay nada que mostrar");
        }else{
             alu.cadena();
            }
        }
    
    
    
  
   
}
