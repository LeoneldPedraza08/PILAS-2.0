package Enunciado1;


public class CPila {
    int tope = 0,max;
    CAlumno[] pila;
    CAlumno alu = new CAlumno();
    
    public CPila (int max){
        this.tope = 0;
        this.max = max;
        this.pila = new CAlumno[this.max+1];
        for (int i = 0; i < this.max+1; i++) {
            pila[i] = new CAlumno();
        }
    }

    public CPila() {
        this.tope = 0;
        this.max = 4;
        this.pila = new CAlumno[max+1];
    }
    
    public int getTope(){
        return tope;
    }
     
    public void vaciarPila(){
        this.tope = 0;
    }
    
    public boolean siestaLlena(){
        if(this.max == this.tope){
            return true;
        }else{
            return false;
        }
    }
    
    public boolean siestaVacia(){
        if (this.tope == 0){
            return true;
        }else{
            return false;
        }
    }
    
    public void insertarPila( int pos,String codigo, String nombre,int nota1, int nota2){
        
        pila[pos].registrar(codigo, nombre, nota1, nota2);
        tope++;
    }
    
    public void mostrarPila(){
        if (this.siestaVacia()) 
            System.out.println("La pila esta vacia no hay elemento que mostrar");
        else{
            for (int i = 0; i<tope; i++){
            pila[i].mostrarDatos();
            }
        }
    }
     
    public void eliminarPila(){
        if (this.siestaVacia()){
            System.out.println("La pila ya esta vacia");
        }else tope--;
    }
    
}
