package Enunciado01;

public class CPila {
    
   int tope, max;
   CAlumno [] pila; //Declarando arreglo Pila de tipo CAlumno
   CAlumno alu = new CAlumno(); //Creando un objeto de CAlumno
    
   
   public CPila(int MAX){
        this.tope = 0;
        this.max = MAX;
        this.pila = new CAlumno [this.max + 1];
    }
   
   public CPila(){
        this.tope = 0;
        this.max = 100;
        this.pila = new CAlumno [this.max + 1];
    }
   
    public int getTope(){
        return tope;
    }
   
   public boolean siestaLlena(){
        if(this.max == this.tope){
            return true;
        }else{
            return false;
        }
    }
    
    public boolean siestaVacia(){
        if (this.tope == 0){
            return true;
        }else{
            return false;
        }
    }
    
        public void insertarPila(){
        if(this.siestaLlena()){
            System.out.println("La pila esta Llena ");
        }else{
            int item;
            System.out.println("Ingrese el elemento a ingresar: ");
            item = entrada.nextInt();
            this.pila[this.tope] = item;
            this.tope++;
            System.out.println("El item " + item + " se inserto a la pila\n");
        }
    }
    
    public void eliminarPila(){
        if(this.siestaVacia()){
            System.out.println("La pila esta vacia ");
        }else{
            int item = this.pila[this.tope - 1];
            this.tope--;
            System.out.println("El item "+ item + " se ha eliminado de la pila");
        }
    }
    
        public void mostrarPila(){
        if(this.siestaVacia()){
            System.out.println("No hay nada que mostrar");
        }else{
            System.out.println("\tElementos de la pila");
            System.out.println("\t=====================");
            for(int i = 0; i < this.tope ;i++){
                System.out.println(this.pila[i] + " <---> ");
            }
        }
    
    
    
  
   
}
