package Enunciado01;

public class CPila {
    
   int tope, max;
   CAlumno [] pila; //Declarando arreglo Pila de tipo CAlumno
   CAlumno alu = new CAlumno(); //Creando un objeto de CAlumno
    
   
   public CPila(int MAX){
        this.tope = 0;
        this.max = MAX;
        this.pila = new CAlumno [this.max + 1];
    }
   
   public CPila(){
        this.tope = 0;
        this.max = 100;
        this.pila = new CAlumno [this.max + 1];
    }
   
    public int getTope(){
        return tope;
    }
   
   public boolean siestaLlena(){
        if(this.max == this.tope){
            return true;
        }else{
            return false;
        }
    }
    
    public boolean siestaVacia(){
        if (this.tope == 0){
            return true;
        }else{
            return false;
        }
    }
    
    public void insertar(int pos, int codigo, String nombre, int n1, int n2){
        if(this.siestaLlena()){
            System.out.println("La pila esta Llena ");
        }else{
        pila[this.tope].insertar(codigo, nombre, n1, n2);
        }
    }
    
    public void eliminarPila(){
        if(this.siestaVacia()){
            System.out.println("La pila esta vacia ");
        }else{
            pila[this.tope - 1];
            this.tope--;
        }
    }
    
        public void mostrarPila(){
        if(this.siestaVacia()){
            System.out.println("No hay nada que mostrar");
        }else{
             cadena();
            }
        }
    
    
    
  
   
}
